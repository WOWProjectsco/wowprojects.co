wow_green_olive = #4b7447
wow_white_bone = #F8F1E5 // white olive: #F8F1E5
wow_black_coal = #2F3131
wow_blue_steel = #426e86
wow_red_tomato = #cf3721

wow_white_bone_75 = rgba(248,241,229, 0.75)
wow_white_bone_65 = rgba(248,241,229, 0.65)

@font-face
	font-family HUELIC
	font-style normal
	src url(fonts/HUELIC/HUELIC_B.ttf)

@font-face
	font-family century-gothic
	font-style normal
	src url(fonts/century-gothic.ttf)

@font-face
	font-family museo_500
	font-style normal
	src url(fonts/museo_500/Museo500-Regular-webfont.ttf)

@font-face
	font-family caneletter_script
	font-style normal
	src url(fonts/caneletter_script/CaneletterScript_PersonalUse.otf)

wow_font01 = HUELIC, NeueHaasBold, Helvetica, sans-serif
wow_font02 = century-gothic,'Tungsten A', 'Tungsten B'
wow_font03 = museo_500, Helvetica, sans-serif
wow_font04 = caneletter_script


/**********************************
* About Us Section
***********************************/
#wow-aboutUs
	padding 0 0 65px 0
	#banner
		display block
		position relative
		text-align center
		width 100%
		height 640px
		background-position center
		background-size cover
		padding-top 170px
		h2
			font-size 22px
			line-height 40px
			max-width 800px
			margin 0 auto
			color wow_black_coal
			font-family wow_font02
	#humaan-intro
		max-width 940px
		margin 0 auto
		padding 80px 40px 0
		-moz-column-count 2
		-moz-column-gap 50px
		-webkit-column-count 2
		-webkit-column-gap 50px
		-webkit-column-count 2
		-moz-column-count 2
		column-count 2
		-webkit-column-gap 50px
		-moz-column-gap 50px
		column-gap 50px
		p
			font-size 17px
			line-height 32px
			font-weight 300
			margin-bottom 29px
	span
		color #426e86
		font-family wow_font04
		font-style italic
		font-size 30px
		line-height 48.6px
		font-weight normal
		text-align center

@media only screen and (max-width: 980px)
	#wow-aboutUs
		#banner
			h2
				padding 0 20px
				font-size 20px
				line-height  36px

@media only screen and (max-width: 767px)
	#wow-aboutUs
		#banner
			height 250px
			padding-top 50px
			h2
				z-index 2
				position relative
			h2
				font-size 16px
				line-height 30px
		#banner:before
			content ""
			display block
			width 100%
			height 100%
			background wow_white_bone_65
			position absolute
			top 0
			left 0
			z-index 1
		#humaan-intro
			-moz-column-count 1
			-webkit-column-count 1
			column-count 1
			p
				font-size 16px
				line-height 30px
		span
			padding 0 20px
			font-size 25px
			line-height 30px


@media only screen and (max-width: 600px)
	#wow-aboutUs
		#banner
			padding-top 0
			h2
				font-size 15px
			br
				display none
		#humaan-intro
			padding 40px 30px 0
			p
				font-size 14px
				line-height 28px

@media only screen and (max-width: 500px)
	#wow-aboutUs
		#banner
			h2
				font-size 14px
@media only screen and (max-width: 400px)
	#wow-aboutUs
		#banner
			h2
				font-size 13px
