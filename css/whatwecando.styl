wow_green_olive = #4b7447
wow_white_bone = #F8F1E5 // white olive: #F8F1E5
wow_black_coal = #2F3131
wow_blue_steel = #426e86
wow_red_tomato = #cf3721

@font-face
	font-family HUELIC
	font-style normal
	src url(fonts/HUELIC/HUELIC_B.ttf)

@font-face
	font-family century-gothic
	font-style normal
	src url(fonts/century-gothic.ttf)

@font-face
	font-family museo_500
	font-style normal
	src url(fonts/museo_500/Museo500-Regular-webfont.ttf)

@font-face
	font-family caneletter_script
	font-style normal
	src url(fonts/caneletter_script/CaneletterScript_PersonalUse.otf)

wow_font01 = HUELIC, NeueHaasBold, Helvetica, sans-serif
wow_font02 = century-gothic,'Tungsten A', 'Tungsten B'
wow_font03 = museo_500, Helvetica, sans-serif
wow_font04 = caneletter_script

/**********************************
* Being WOW
***********************************/
.wow-whatCanWeDoForYou
	padding 0
	#whatCanWeDoForYou
		padding-top 65px
		padding-bottom 65px
		.main-services
			text-align center
			.service.v1
				a
					text-decoration none
					border 1px solid wow_blue_steel
					color wow_blue_steel
					background transparent
					display inline-block
					border-radius 50%
					width 80px
					height 80px
					i
						display inline-block
						font-size 28px
						width 80px
						height 80px
						padding-top 26px
				a:hover
					background wow_blue_steel
					color wow_white_bone
				.caption h4
					text-align center
					margin 30px 0
					color wow_blue_steel
					font-size 21px
				.text p, .text ul
					font-size 14px
					line-height 21px
					color wow_black_coal
					text-align justify
					margin-bottom 2px
				.text ul
					text-align left
					list-style-type circle
					list-style-position inside
					padding-left 10%
					padding-bottom 50px
					font-family wow_font02
	#whatCanWeDoForYou>p
		color  wow_blue_steel
		font-family wow_font01
		font-style italic
		font-size 30px
		line-height 48.6px

@media only screen and (max-width: 1215px)
	.wow-teamwow
		#teamwow
			.slider-left
				left 20px
				top 18px
			.slider-right
				right 20px
				top 18px

@media only screen and (max-width: 980px)
	.wow-teamwow
			#value-slider
				article
					.wrap
						span
							font-size 60px
							line-height 60px
						div
							margin-left 106px
						h4
							font-size 40px
							line-height 45px
						p
							font-size 16px
							line-height 25.92px
			.slider-left
				left 20px
			.slider-right
				right 20px

@media only screen and (max-width: 767px)
	.wow-teamwow
		#teamwow
			padding 50px 0
			.team
				.member
					padding-right 15px
		#being-wow>p
			padding 0 20px
			font-size 25px
			line-height 30px


@media only screen and (max-width: 600px)
	.wow-teamwow
		#teamwow
			#slider-wrap
				padding: 0 30px
			.pager
				span
					margin: 0
		.slider-left, .slider-right
			display none

@media only screen and (max-width: 500px)
	.wow-teamwow
		.inc.slider-left, .nav-arrow.left
			background-position -384px -448px
			width 23px
			height 55px
			display inline-block
		.inc.slider-right, .nav-arrow.right
			background-position -448px -448px
			width 23px
			height 55px
			display inline-block
		#teamwow
			p.title
				font-size 30px

.icn
	display block
	background-image url("../img/sprites.png")
	background-repeat no-repeat
	span
		display none

.icn.slider-left, .nav-arrow.left {
    background-position: -384px -448px;
    width: 23px;
    height: 55px;
    display: inline-block;
}
.icn.slider-right, .nav-arrow.right {
    background-position: -448px -448px;
    width: 23px;
    height: 55px;
    display: inline-block;
}


